<%- include ("../partials/header") %>

    <div class="row ">
        <div class="col-xl-2 align-self-xl-start  mb-5 mb-xl-0 sticky-top">
            <div class="row">
                <div class="col-xl-12 col-4">
                    <div class="   d-flex justify-content-center  <%= typeof page !== 'undefined' && page === 'expenses' ? 'active': '' %>">
                        <a class="iconLink d-flex flex-column align-items-center " href="/expenses">
                            <span class="d-flex iconContainer justify-content-center align-items-center">
                                <span id="iconDesktop" class="d-flex fas fa-desktop fa-2x  "></span>
                            </span>
                            <span class=" iconLabel pt-1">Overview</span>
                        </a>
                    </div>
                </div>
                <div class="col-xl-12 col-4 mt-xl-5">
                    <div class=" <%= typeof page !== 'undefined' && page === 'addExpenses' ? 'active selectedDiv' : '' %> d-flex justify-content-center ">
                        <a class="iconLink d-flex flex-column align-items-center " href="/expenses/new">
                            <span class="d-flex iconContainer justify-content-center align-items-center">
                                <span id="iconEuro" class="d-flex fas fa-euro-sign fa-2x  " data-fa-transform=" left-1"></span>
                            </span>
                            <span class="iconLabel pt-1">Add Expenses</span>
                        </a>
                    </div>
                </div>
                <div class="col-xl-12 col-4 mt-xl-5">
                    <div class=" <%= typeof page !== 'undefined' && page === 'history' ? 'active': '' %> d-flex justify-content-center ">
                        <a class="iconLink d-flex flex-column align-items-center " href="/expenses-history">
                            <span class="d-flex iconContainer justify-content-center align-items-center">
                                <span id="iconHistory" class=" d-flex fas fa-calendar-alt fa-2x  "></span>
                            </span>
                            <span class=" iconLabel pt-1">History</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-8  ">
            <div class="overviewDiv  ">
                <div>
                    <h4 class="d-flex flex-row">
                        <i id="overviewIcon" class="far fa-circle"></i>
                        <span id="overviewSpan" class="d-block">
                           Edit Expenses
                        </span>
                    </h4>
                </div>
                <div class="row justify-content-center">
                    <div class="addExpensesDiv mt-2 mb-3 pb-4 col-9 col-sm-8">

                        <form action="/expenses/<%= expense.type %>/details/<%= expense._id %>?_method=PUT" method="POST" onsubmit="return validateForm()">
                            <div class="login form-group">
                                <label for="description">Description</label>
                                <div class="inner-addon my-auto">
                                    <i id="descIcon" class="fas fa-pen"></i>
                                    <input type="text" value="<%= expense.description %>" class="form-control ml-4 p-3" id="description" name="description" placeholder="Jumbo" required>
                                </div>
                            </div>
                            <div class="login form-group">
                                <label for="amount">Amount</label>
                                <div class="inner-addon my-auto">
                                    <i id="amountIcon" class="fas fa-dollar-sign"></i>
                                    <input type="number" value="<%= expense.amount %>" class="form-control ml-4 p-3" id="amount" name="amount" placeholder="10" min="0.01" step="0.01" required>
                                </div>
                            </div>
                            
								
							
							<div class="selectWrapper" >
              
                            <div  class="selectDiv" >
                                <label class="mb-4 pb-2" for="custom-select">Choose type of expense:</label>
                                <input name="type" value="<%= expense.type %>" placeholder="Rent" required readonly="readonly" type="text" id="custom-select">
                                <span id="selectIcon"><i  class="far fa-arrow-alt-circle-down"></i></span>
                                <ul class="custom-select-options">
                                    <li>Groceries</li>
                                    <li>Home</li>
                                    <li>Food &#38; Drinks</li>
                                    <li>Rent</li>
                                    <li>Utilities</li>
                                    <li>Holiday &#38; Travelling</li>
                                    <li>Leisure &#38; Entertainment</li>
                                    <li>Shopping</li>
                                    <li>Transportation</li>
                                </ul>
                            </div>
                            
                        </div>
							
							

                            <div class="mt-5 pt-5 justify-content-center d-flex">
                                <button type="submit" class="btnExpenses btn  text-center">Submit</button>
                            </div>
                        </form>

                    </div>
                </div>

            </div>

        </div>

    </div>

    <%- include ("../partials/footer") %>